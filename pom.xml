<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.foo</groupId>
	<artifactId>foo-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>
	<modules>
		<module>foo-module1</module>
		<module>foo-module2</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>eu.stamp-project</groupId>
				<artifactId>pitmp-maven-plugin</artifactId>
				<version>1.3.6</version>
				<configuration>
					<configuration>
						<targetModules>
							<param>foo-module2</param>
							<targetModule>foo-module2</targetModule>
						</targetModules>
						<skippedModules>
							<param>foo-module1</param>
							<param>org.foo:foo-module1</param>
							<skippedModule>foo-module1</skippedModule>
							<skippedModule>org.foo:foo-module1</skippedModule>
						</skippedModules>
						<excludedClasses>
							<excludedClass>org.foo.Service1</excludedClass>
						</excludedClasses>
						<excludedTestClasses>
							<excludedTestClass>org.foo.*IT</excludedTestClass>
						</excludedTestClasses>
						<avoidCallsTo>
							<avoidCallsTo>java.util.logging</avoidCallsTo>
							<avoidCallsTo>org.apache.log4j</avoidCallsTo>
							<avoidCallsTo>org.slf4j</avoidCallsTo>
							<avoidCallsTo>org.apache.commons.logging</avoidCallsTo>
						</avoidCallsTo>
					</configuration>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>